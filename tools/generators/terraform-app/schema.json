{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "terraform-app",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Application name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the application (separated by commas)"
    }
  },
  "required": ["name"]
}
