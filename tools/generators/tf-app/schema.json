{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "tf-app",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "App name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What's that name of the new terraform application?"
    }
  },
  "required": ["name"]
}
