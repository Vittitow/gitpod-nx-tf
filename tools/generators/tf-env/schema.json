{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "tf-env",
  "type": "object",
  "properties": {
    "app": {
      "type": "string",
      "description": "Name of application",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What's the name of the terraform application?"
    },
    "env": {
      "type": "string",
      "description": "Name of environment",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What's the name of the terraform environment?"
    }
  },
  "required": ["app", "env"]
}
